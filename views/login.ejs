        .box-inp {
            margin-bottom: 1rem;
        }

        input[type="password"],
        input[type="submit"] {
            width: 100%;
            padding: 0.75rem;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            background: #111; /* Dark background */
            color: #e5e5e5; /* Light text */
            box-shadow: 0 0 5px #ff0000; /* Slight red glow */
            text-align: center; /* Centers text inside the button */
        }

        input[type="password"]:focus,
        input[type="submit"]:hover {
            outline: none;
            background: linear-gradient(to right, #550000, #ff0000); /* Red gradient */
            color: #fff;
            cursor: pointer;
            box-shadow: 0 0 15px #ff0000; /* More intense glow on hover */
        }

        input[type="submit"] {
            font-weight: bold;
            text-align: center; /* Ensure text is centered */
        }

        p {
            text-align: center;
            margin-top: 1rem;
        }

        p a {
            color: #ff0000; /* Red link */
            text-decoration: none;
        }

        p a:hover {
            text-shadow: 0 0 5px #ff0000;
        }

        @media(max-width: 400px) {
            form {
                width: 90%;
            }
        }
    </style>
</head>

