        }

        #image-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: -1;
            filter: brightness(50%); /* Darkens the background */
        }

        form {
            form {
    background: rgba(0, 0, 0, 0.8); /* Semi-transparent black */
    border: 1px solid #ff0000; /* Red glowing border */
    box-shadow: 0 0 15px #ff0000; /* Red glow effect */
    width: 300px; /* Adjusts the width of the form */
    padding: 2rem; /* Ensures equal spacing inside the form */
    color: #e5e5e5; /* Text color */
    text-align: center; /* Centers content */
    border-radius: 10px; /* Smooth corners */
    box-sizing: border-box; /* Padding is included in the width/height */
}

        }

        .main-t {
